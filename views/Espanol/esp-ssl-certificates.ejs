<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Certificados SSL</title>
  <style>
    .pricing-container { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 10px; margin: 20px 0; }
    .card { background: linear-gradient(135deg, #1e3c72, #2a5298); border-radius: 10px; box-shadow: 0 3px 8px rgba(0,0,0,0.3); padding: 12px; text-align: center; transition: transform 0.2s ease-in-out; max-width: 250px; margin: 0 auto; }
    .card:hover { transform: translateY(-5px); }
    .card h1 { margin: 0; font-size: 18px; color: #fff; }
    .price { font-size: 14px; font-weight: bold; margin: 10px 0; color: #ffd700; }
    .desc { font-size: 12px; margin-bottom: 15px; color: #f0f0f0; }
    .btn { display: inline-block; padding: 10px 20px; background: #ffd700; color: #0d1b3a; font-weight: bold; border-radius: 8px; text-decoration: none; transition: background 0.3s; }
    .btn:hover { background: #ffcc00; }

    body { font-family: Arial, sans-serif; text-align: center; margin: 0; padding-top: 90px; background-color: #0d1b3a; }
    h1 { color: #ffffff; margin: 0 16px 8px; }
    p  { color: #ffffff; margin: 0 16px 16px; }
    input, select { padding: 10px; width: 280px; border: 1px solid #bbb; border-radius: 4px; margin-top: 10px; background: #fff; }
    button { padding: 10px 20px; margin-top: 10px; background-color: #0099cc; color: white; border: none; border-radius: 8px; cursor: pointer; }
    button:hover { background-color: #007a99; }
    #result { margin-top: 20px; font-size: 1.05em; color: #fff; }
    .secure { background: #dff6e3; padding: 10px; margin: 10px auto; width: 320px; border-radius: 4px; border: 1px solid #b2e0b2; color:#0d1b3a; }

    .btn-inicio { background-color: #0099cc; border: none; color: white; padding: 0.75rem 1.5rem; font-size: 1rem; cursor: pointer; border-radius: 8px; transition: background-color 0.3s ease; margin-top: 1rem; }
    .btn-inicio:hover { background-color: #007a99; }

    .lang-switch { position: fixed; top: 15px; right: 50px; z-index: 9999; display: flex; gap: 10px; }
    .lang-switch img { width: 60px; height: 50px; cursor: pointer; display: block; }

    #chatbot-container { position: fixed; bottom: 20px; right: 20px; z-index: 9999; }
    #chatbot-toggle { background:#0073e6; color:#fff; border:none; padding:12px 18px; border-radius:50px; cursor:pointer; box-shadow:0px 4px 8px rgba(0,0,0,0.2); }
    #chatbot-box { display:none; width:300px; height:400px; background:#fff; border-radius:12px; box-shadow:0px 4px 10px rgba(0,0,0,0.3); position:absolute; bottom:60px; right:0; overflow:hidden; }
  </style>
</head>
<body>

  <!-- Selector de idiomas: español -> inglés -->
  <div class="lang-switch">
    <a href="/en/ssl-certificates">
      <img src="/img/bandera-uk.png" alt="English">
    </a>
  </div>

  <h1>Certificados SSL</h1>
  <p>Verifica el estado SSL de tu dominio o compra un nuevo certificado.</p>

  <!-- Verificador SSL -->
  <input type="text" id="domainInput" placeholder="Introduce tu dominio (ej: ejemplo.com)">
  <br>
  <button onclick="checkSSL()">Verificar SSL</button>
  <div id="result" aria-live="polite" aria-atomic="true"></div>

  <!-- Selector de producto -->
  <div style="margin-top:24px;">
    <select id="certType">
      <option value="DV" selected>DV (Validación de Dominio) — desde 19 €/año</option>
      <option value="OV">OV (Validación de Organización) — desde 49 €/año</option>
      <option value="EV">EV (Validación Extendida) — desde 79 €/año</option>
    </select>
    <br>
    <select id="years">
      <option value="1" selected>1 año</option>
      <option value="2">2 años</option>
      <option value="3">3 años</option>
    </select>
    <br>
    <button id="btn-buy">Comprar SSL</button>
    <div id="priceBox" style="color:#fff; margin-top:8px;"></div>
  </div>

  <div style="text-align: center;">
    <!-- RUTA ABSOLUTA CORRECTA -->
    <button class="btn-inicio" onclick="window.location.href='/es/esp-namegasm-pagina-inicial-basica'">Volver a Inicio</button>
  </div>

  <!-- Tarjetas simples (opcional) -->
  <div class="pricing-container">
    <div class="card">
      <h1>Promo</h1>
      <p class="price">Gratis</p>
      <p class="desc">Escaneo básico del estado SSL.</p>
      <a href="#" class="btn" id="btn-promo">Entrar</a>
    </div>
    <div class="card">
      <h1>Desde</h1>
      <p class="price">19 €/año</p>
      <p class="desc">Certificados DV para cifrado esencial.</p>
      <a href="#" class="btn" id="btn-cta-dv">Suscribirse</a>
    </div>
  </div>

  <script>
    function isValidDomain(d){ return /^(?!-)([a-zA-Z0-9-]{1,63}\.)+[a-zA-Z]{2,}$/.test(d); }
    function checkSSL(){
      const domain = document.getElementById('domainInput').value.trim();
      if(!domain){ document.getElementById('result').innerHTML = "⚠ Por favor, introduce un dominio."; return; }
      if(!isValidDomain(domain)){ document.getElementById('result').innerHTML = "⚠ Escribe un dominio válido (por ejemplo, ejemplo.com)."; return; }
      const ok = Math.random() > 0.5;
      const status = ok ? "Válido hasta Dic 2025" : "No se encontró certificado SSL";
      const color = ok ? "#27ae60" : "#c0392b";
      document.getElementById('result').innerHTML =
        `<div class="secure" style="border-color:${color};">
          <b>🔒 Estado SSL para ${domain}:</b><br>
          <span style="color:${color};">${status}</span>
        </div>`;
    }

    function calcPrice(type, years){
      const base = { DV: 19, OV: 49, EV: 79 }[type] || 19;
      const total = base * years;
      const discount = years === 2 ? 0.05 : (years === 3 ? 0.10 : 0);
      return +(total * (1 - discount)).toFixed(2);
    }
    function refreshPrice(){
      const type = document.getElementById('certType').value;
      const years = parseInt(document.getElementById('years').value, 10);
      const price = calcPrice(type, years);
      const label = { DV: "DV", OV: "OV", EV: "EV" }[type];
      document.getElementById('priceBox').innerText = `Total: €${price.toFixed(2)} (${label}, ${years} año(s))`;
      return price;
    }
    document.getElementById('certType').addEventListener('change', refreshPrice);
    document.getElementById('years').addEventListener('change', refreshPrice);
    refreshPrice();

    function createOrderAndGo(price, name){
      fetch('/api/orders',{
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({ items:[{ name, price, currency:"EUR", quantity:1 }] })
      })
      .then(r=>r.json())
      .then(()=>{ window.location.href='/cart'; })
      .catch(err=>alert('Error al crear la orden: ' + err.message));
    }
    document.getElementById('btn-buy').addEventListener('click',()=>{
      const type = document.getElementById('certType').value;
      const years = parseInt(document.getElementById('years').value,10);
      const price = refreshPrice();
      createOrderAndGo(price, `SSL ${type} (${years} año/s)`);
    });
    document.getElementById('btn-cta-dv').addEventListener('click',(e)=>{
      e.preventDefault(); createOrderAndGo(19.00, 'SSL DV (1 año)');
    });
    document.getElementById('btn-promo').addEventListener('click',(e)=>{
      e.preventDefault(); alert('Escaneo gratuito activado (simulado).');
    });
  </script>

  <!-- Chatbot -->
  <div id="chatbot-container">
    <button id="chatbot-toggle">💬 Chat</button>
    <div id="chatbot-box">
      <div style="background:#0073e6; color:white; padding:10px; font-weight:bold;">Asistente</div>
      <div id="chatbot-messages" style="height:300px; overflow-y:auto; padding:10px; font-size:14px; color:#0d1b3a;"></div>
      <div style="display:flex; border-top:1px solid #ccc;">
        <input type="text" id="chatbot-input" placeholder="Escribe aquí..." style="flex:1; border:none; padding:10px; font-size:14px;">
        <button id="chatbot-send" style="background:#0073e6; color:#fff; border:none; padding:10px; cursor:pointer;">➤</button>
      </div>
    </div>
  </div>
  <script>
    const toggle = document.getElementById("chatbot-toggle");
    const box = document.getElementById("chatbot-box");
    const input = document.getElementById("chatbot-input");
    const send = document.getElementById("chatbot-send");
    const messages = document.getElementById("chatbot-messages");
    toggle.addEventListener("click",()=>{ box.style.display=(box.style.display==="none"||box.style.display==="")?"block":"none"; });
    send.addEventListener("click",()=>{ const text=input.value.trim(); if(text){ messages.innerHTML+=`<div style="margin-bottom:10px;"><strong>Tú:</strong> ${text}</div>`; messages.innerHTML+=`<div style="margin-bottom:10px; color:#0d1b3a;"><strong>Bot:</strong> Gracias por tu mensaje, pronto tendrás respuesta.</div>`; input.value=""; messages.scrollTop=messages.scrollHeight; }});
    input.addEventListener("keydown",(e)=>{ if(e.key==="Enter") send.click(); });
  </script>
</body>
</html>

