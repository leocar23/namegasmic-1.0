<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Seguridad Web</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; margin: 0; padding-top: 90px; background-color: #0d1b3a; }
    h1 { color: white; margin: 0 16px 8px; }
    p  { color: white; margin: 0 16px 16px; }

    input { padding: 10px; width: 300px; margin-top: 10px; border: 1px solid #ccc; border-radius: 8px; }
    button { padding: 10px 20px; margin-top: 10px; background-color: #0073e6; color: white; border: none; cursor: pointer; border-radius: 8px; }
    button:hover { background-color: #005bb5; }

    #result { margin: 18px auto 0; font-size: 16px; color: #fff; max-width: 620px; }
    .report { background:#ffffff; color:#0d1b3a; border-radius:12px; padding:16px; text-align:left; box-shadow:0 4px 10px rgba(0,0,0,0.25); }
    .ok { color:#27ae60; } .warn { color:#e67e22; } .bad { color:#c0392b; }

    .btn-inicio { background-color: #0073e6; border: none; color: white; padding: 0.75rem 1.5rem; font-size: 1rem; cursor: pointer; border-radius: 8px; transition: background-color 0.3s ease; margin-top: 1rem; }
    .btn-inicio:hover { background-color: #005bb5; }

    .lang-switch { position: fixed; top: 15px; right: 50px; z-index: 9999; display: flex; gap: 10px; }
    .lang-switch img { width: 60px; height: 50px; cursor: pointer; display: block; }

    .pricing-container { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 10px; margin: 26px 16px; }
    .card { background: linear-gradient(135deg, #1e3c72, #2a5298); border-radius: 10px; box-shadow: 0 3px 8px rgba(0,0,0,0.3); padding: 12px; text-align: center; transition: transform 0.2s ease-in-out; max-width: 260px; margin: 0 auto; }
    .card:hover { transform: translateY(-5px); }
    .card h1 { margin: 0; font-size: 18px; color: #fff; }
    .price { font-size: 14px; font-weight: bold; margin: 10px 0; color: #ffd700; }
    .desc { font-size: 12px; margin-bottom: 15px; color: #f0f0f0; }
    .btn { display: inline-block; padding: 10px 20px; background: #ffd700; color: #0d1b3a; font-weight: bold; border-radius: 8px; text-decoration: none; transition: background 0.3s; }
    .btn:hover { background: #ffcc00; }

    #chatbot-container { position: fixed; bottom: 20px; right: 20px; z-index: 9999; }
    #chatbot-toggle { background:#0073e6; color:#fff; border:none; padding:12px 18px; border-radius:50px; cursor:pointer; box-shadow:0px 4px 8px rgba(0,0,0,0.2); }
    #chatbot-box { display:none; width:300px; height:400px; background:#fff; border-radius:12px; box-shadow:0px 4px 10px rgba(0,0,0,0.3); position:absolute; bottom:60px; right:0; overflow:hidden; }
  </style>
</head>
<body>

  <!-- Selector de idiomas: español -> inglés -->
  <div class="lang-switch">
    <a href="/en/website-security">
      <img src="/img/bandera-uk.png" alt="English">
    </a>
  </div>

  <h1>Seguridad Web</h1>
  <p>Consulta el estado de seguridad actual de tu sitio.</p>

  <input type="text" id="domainInput" placeholder="Introduce tu dominio (ej: ejemplo.com)">
  <br>
  <button onclick="checkSecurity()">Analizar seguridad</button>

  <div id="result" aria-live="polite" aria-atomic="true"></div>

  <div style="text-align:center;">
    <button class="btn-inicio" onclick="window.location.href='esp-namegasm-pagina-inicial-basica'">Volver al inicio</button>
  </div>

  <!-- Planes -->
  <div class="pricing-container">
    <div class="card">
      <h1>Escaneo</h1>
      <p class="price">9 € único</p>
      <p class="desc">Revisión de malware/blacklist y headers.</p>
      <a href="#" class="btn" id="plan-scan">Comprar</a>
    </div>
    <div class="card">
      <h1>WAF + CDN</h1>
      <p class="price">4,99 €/mes</p>
      <p class="desc">Mitigación DDoS, caché y reglas.</p>
      <a href="#" class="btn" id="plan-waf">Suscribirse</a>
    </div>
    <div class="card">
      <h1>Suite Completa</h1>
      <p class="price">9,99 €/mes</p>
      <p class="desc">WAF + CDN + escaneos diarios + alertas.</p>
      <a href="#" class="btn" id="plan-full">Suscribirse</a>
    </div>
  </div>

  <script>
    function isValidDomain(d) {
      return /^(?!-)([a-zA-Z0-9-]{1,63}\.)+[a-zA-Z]{2,}$/.test(d);
    }

    function checkSecurity() {
      const d = document.getElementById('domainInput').value.trim();
      const out = document.getElementById('result');
      if (!d) { out.innerHTML = "⚠ Por favor, introduce un dominio."; return; }
      if (!isValidDomain(d)) { out.innerHTML = "⚠ Dominio no válido (ej: ejemplo.com)."; return; }

      // Simulación
      const https = Math.random() > 0.2;
      const headers = Math.random() > 0.5;
      const malware = Math.random() > 0.8;
      const blacklist = Math.random() > 0.9;

      const score = (https?30:0) + (headers?25:0) + (!malware?25:0) + (!blacklist?20:0);
      const grade = score >= 80 ? 'A' : score >= 60 ? 'B' : score >= 40 ? 'C' : 'D';

      out.innerHTML = `
        <div class="report">
          <div><b>🔐 Dominio:</b> ${d}</div>
          <ul style="margin:10px 0 0 18px; padding:0; list-style:disc;">
            <li>HTTPS/TLS: <span class="${https?'ok':'bad'}">${https?'OK':'Ausente/débil'}</span></li>
            <li>Encabezados de seguridad (CSP/HSTS): <span class="${headers?'ok':'warn'}">${headers?'Presentes':'Parcial/ninguno'}</span></li>
            <li>Escaneo de malware: <span class="${!malware?'ok':'bad'}">${!malware?'Limpio':'Sospechoso'}</span></li>
            <li>Listas negras: <span class="${!blacklist?'ok':'bad'}">${!blacklist?'No listado':'Listado'}</span></li>
          </ul>
          <div style="margin-top:10px;"><b>Puntuación:</b> ${score}/100 — <b>Grado:</b> ${grade}</div>
        </div>
      `;
    }

    function order(name, price, period) {
      fetch('/api/orders', {
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({ items: [{ name, price, currency:'EUR', quantity:1, period: period || null }] })
      })
      .then(r=>r.json())
      .then(()=>{ window.location.href='/cart'; })
      .catch(err=>alert('Error al crear la orden: '+err.message));
    }
    document.getElementById('plan-scan').addEventListener('click', e=>{ e.preventDefault(); order('Escaneo de Seguridad (único)', 9.00, 'una-vez'); });
    document.getElementById('plan-waf').addEventListener('click',  e=>{ e.preventDefault(); order('WAF + CDN (mensual)', 4.99, 'mensual'); });
    document.getElementById('plan-full').addEventListener('click', e=>{ e.preventDefault(); order('Suite Completa (mensual)', 9.99, 'mensual'); });
  </script>

  <!-- Chatbot -->
  <div id="chatbot-container">
    <button id="chatbot-toggle">💬 Chat</button>
    <div id="chatbot-box">
      <div style="background:#0073e6; color:white; padding:10px; font-weight:bold;">Asistente</div>
      <div id="chatbot-messages" style="height:300px; overflow-y:auto; padding:10px; font-size:14px; color:#0d1b3a;"></div>
      <div style="display:flex; border-top:1px solid #ccc;">
        <input type="text" id="chatbot-input" placeholder="Escribe aquí..." style="flex:1; border:none; padding:10px; font-size:14px;">
        <button id="chatbot-send" style="background:#0073e6; color:#fff; border:none; padding:10px; cursor:pointer;">➤</button>
      </div>
    </div>
  </div>
  <script>
    const toggle=document.getElementById("chatbot-toggle");
    const box=document.getElementById("chatbot-box");
    const input=document.getElementById("chatbot-input");
    const send=document.getElementById("chatbot-send");
    const messages=document.getElementById("chatbot-messages");
    toggle.addEventListener("click",()=>{ box.style.display=(box.style.display==="none"||box.style.display==="")?"block":"none"; });
    send.addEventListener("click",()=>{ const t=input.value.trim(); if(t){ messages.innerHTML+=`<div style="margin-bottom:10px;"><strong>Tú:</strong> ${t}</div>`; messages.innerHTML+=`<div style="margin-bottom:10px; color:#0d1b3a;"><strong>Bot:</strong> Gracias por tu mensaje, pronto tendrás respuesta.</div>`; input.value=""; messages.scrollTop=messages.scrollHeight; } });
    input.addEventListener("keydown",(e)=>{ if(e.key==="Enter") send.click(); });
  </script>
</body>
</html>
