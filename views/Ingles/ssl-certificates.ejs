<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>SSL Certificates</title>
  <style>
    .pricing-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 10px;
  margin: 20px 0;
}

/* Compacta la altura ~50% sin cambiar el ancho ni el look */
.card {
  background: linear-gradient(135deg, #1e3c72, #2a5298);
  border-radius: 10px;
  box-shadow: 0 3px 8px rgba(0,0,0,0.3);
  padding: 4px 8px;              /* antes: 12px */
  text-align: center;
  transition: transform 0.2s ease-in-out;
  max-width: 240px;
  margin: 0 auto;
}

.card:hover { transform: translateY(-5px); }

.card h1 {
  margin: 0;
  font-size: 12px;               /* antes: 18px */
  line-height: 1.1;
  color: #fff;
}

.price {
  font-size: 11px;               /* antes: 14px */
  font-weight: bold;
  margin: 4px 0;                 /* antes: 10px */
  color: #ffd700;
}

.desc {
  font-size: 10px;               /* antes: 12px */
  margin-bottom: 6px;            /* antes: 15px */
  line-height: 1.2;
  color: #f0f0f0;
}

.btn {
  display: inline-block;
  padding: 4px 16px;             /* antes: 10px 20px */
  background: #ffd700;
  color: #0d1b3a;
  font-weight: bold;
  border-radius: 8px;
  text-decoration: none;
  transition: background 0.3s;
  font-size: 12px;               /* más compacto */
  line-height: 1.2;
}

.btn:hover { background: #ffcc00; }


    body { font-family: Arial, sans-serif; text-align: center; margin: 0; padding-top: 90px; background-color: #0d1b3a; }
    h1 { color: #ffffff; margin: 0 16px 8px; }
    p  { color: #ffffff; margin: 0 16px 16px; }
    input, select { padding: 10px; width: 280px; border: 1px solid #bbb; border-radius: 4px; margin-top: 10px; background: #fff; }
    button { padding: 10px 20px; margin-top: 10px; background-color: #0099cc; color: white; border: none; border-radius: 8px; cursor: pointer; }
    button:hover { background-color: #007a99; }
    #result { margin-top: 20px; font-size: 1.05em; color: #fff; }
    .secure { background: #dff6e3; padding: 10px; margin: 10px auto; width: 320px; border-radius: 4px; border: 1px solid #b2e0b2; color:#0d1b3a; }

    .btn-home { background-color: #0099cc; border: none; color: white; padding: 0.75rem 1.5rem; font-size: 1rem; cursor: pointer; border-radius: 8px; transition: background-color 0.3s ease; margin-top: 1rem; }
    .btn-home:hover { background-color: #007a99; }

    .lang-switch { position: fixed; top: 15px; right: 50px; z-index: 9999; display: flex; gap: 10px; }
    .lang-switch img { width: 60px; height: 50px; cursor: pointer; display: block; }

    #chatbot-container { position: fixed; bottom: 20px; right: 20px; z-index: 9999; }
    #chatbot-toggle { background:#0073e6; color:#fff; border:none; padding:12px 18px; border-radius:50px; cursor:pointer; box-shadow:0px 4px 8px rgba(0,0,0,0.2); }
    #chatbot-box { display:none; width:300px; height:400px; background:#fff; border-radius:12px; box-shadow:0px 4px 10px rgba(0,0,0,0.3); position:absolute; bottom:60px; right:0; overflow:hidden; }
  </style>
</head>
<body>

  <!-- Language: English -> Spanish -->
  <div class="lang-switch">
    <a href="/es/esp-ssl-certificates">
      <img src="/img/bandera-es.png" alt="Español">
    </a>
  </div>

  <h1>SSL Certificates</h1>
  <p>Check your domain’s SSL status or purchase a new certificate.</p>

  <input type="text" id="domainInput" placeholder="Enter your domain (e.g., example.com)">
  <br>
  <button onclick="checkSSL()">Check SSL</button>
  <div id="result" aria-live="polite" aria-atomic="true"></div>

  <div style="margin-top:24px;">
    <select id="certType">
      <option value="DV" selected>DV (Domain Validation) — from €19/year</option>
      <option value="OV">OV (Organization Validation) — from €49/year</option>
      <option value="EV">EV (Extended Validation) — from €79/year</option>
    </select>
    <br>
    <select id="years">
      <option value="1" selected>1 year</option>
      <option value="2">2 years</option>
      <option value="3">3 years</option>
    </select>
    <br>
    <button id="btn-buy">Buy SSL</button>
    <div id="priceBox" style="color:#fff; margin-top:8px;"></div>
  </div>

  <div style="text-align: center;">
    <!-- ABSOLUTE AND CORRECT -->
    <button class="btn-home" onclick="window.location.href='/en/namegasm-pagina-inicial-basica'">Go Back</button>
  </div>

  <div class="pricing-container">
    <div class="card">
      <h1>Promo</h1>
      <p class="price">Free</p>
      <p class="desc">Basic SSL status scan.</p>
      <a href="#" class="btn" id="btn-promo">Enter</a>
    </div>
    <div class="card">
      <h1>From</h1>
      <p class="price">€19/year</p>
      <p class="desc">DV certificates for essential encryption.</p>
      <a href="#" class="btn" id="btn-cta-dv">Subscribe</a>
    </div>
  </div>

  <script>
    function isValidDomain(d){ return /^(?!-)([a-zA-Z0-9-]{1,63}\.)+[a-zA-Z]{2,}$/.test(d); }
    function checkSSL(){
      const domain = document.getElementById('domainInput').value.trim();
      if(!domain){ document.getElementById('result').innerHTML = "⚠ Please enter a domain."; return; }
      if(!isValidDomain(domain)){ document.getElementById('result').innerHTML = "⚠ Enter a valid domain (e.g., example.com)."; return; }
      const ok = Math.random() > 0.5;
      const status = ok ? "Valid until Dec 2025" : "No SSL certificate found";
      const color = ok ? "#27ae60" : "#c0392b";
      document.getElementById('result').innerHTML =
        `<div class="secure" style="border-color:${color};">
          <b>🔒 SSL status for ${domain}:</b><br>
          <span style="color:${color};">${status}</span>
        </div>`;
    }

    function calcPrice(type, years){
      const base = { DV: 19, OV: 49, EV: 79 }[type] || 19;
      const total = base * years;
      const discount = years === 2 ? 0.05 : (years === 3 ? 0.10 : 0);
      return +(total * (1 - discount)).toFixed(2);
    }
    function refreshPrice(){
      const type = document.getElementById('certType').value;
      const years = parseInt(document.getElementById('years').value, 10);
      const price = calcPrice(type, years);
      const label = { DV: "DV", OV: "OV", EV: "EV" }[type];
      document.getElementById('priceBox').innerText = `Total: €${price.toFixed(2)} (${label}, ${years} year(s))`;
      return price;
    }
    document.getElementById('certType').addEventListener('change', refreshPrice);
    document.getElementById('years').addEventListener('change', refreshPrice);
    refreshPrice();

    function createOrderAndGo(price, name){
      fetch('/api/orders',{
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({ items:[{ name, price, currency:"EUR", quantity:1 }] })
      })
      .then(r=>r.json())
      .then(()=>{ window.location.href='/cart'; })
      .catch(err=>alert('Error creating order: ' + err.message));
    }
    document.getElementById('btn-buy').addEventListener('click',()=>{
      const type = document.getElementById('certType').value;
      const years = parseInt(document.getElementById('years').value,10);
      const price = refreshPrice();
      createOrderAndGo(price, `SSL ${type} (${years} year/s)`);
    });
    document.getElementById('btn-cta-dv').addEventListener('click',(e)=>{
      e.preventDefault(); createOrderAndGo(19.00, 'SSL DV (1 year)');
    });
    document.getElementById('btn-promo').addEventListener('click',(e)=>{
      e.preventDefault(); alert('Free scan activated (simulated).');
    });
  </script>

  <!-- Chatbot -->
  <div id="chatbot-container">
    <button id="chatbot-toggle">💬 Chat</button>
    <div id="chatbot-box">
      <div style="background:#0073e6; color:white; padding:10px; font-weight:bold;">Assistant</div>
      <div id="chatbot-messages" style="height:300px; overflow-y:auto; padding:10px; font-size:14px; color:#0d1b3a;"></div>
      <div style="display:flex; border-top:1px solid #ccc;">
        <input type="text" id="chatbot-input" placeholder="Write here..." style="flex:1; border:none; padding:10px; font-size:14px;">
        <button id="chatbot-send" style="background:#0073e6; color:#fff; border:none; padding:10px; cursor:pointer;">➤</button>
      </div>
    </div>
  </div>
  <script>
    const toggle = document.getElementById("chatbot-toggle");
    const box = document.getElementById("chatbot-box");
    const input = document.getElementById("chatbot-input");
    const send = document.getElementById("chatbot-send");
    const messages = document.getElementById("chatbot-messages");
    toggle.addEventListener("click",()=>{ box.style.display=(box.style.display==="none"||box.style.display==="")?"block":"none"; });
    send.addEventListener("click",()=>{ const text=input.value.trim(); if(text){ messages.innerHTML+=`<div style="margin-bottom:10px;"><strong>You:</strong> ${text}</div>`; messages.innerHTML+=`<div style="margin-bottom:10px; color:#0d1b3a;"><strong>Bot:</strong> Thanks! You'll get a reply soon.</div>`; input.value=""; messages.scrollTop=messages.scrollHeight; }});
    input.addEventListener("keydown",(e)=>{ if(e.key==="Enter") send.click(); });
  </script>
</body>
</html>
